<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:configChanges="keyboardHidden|orientation"
    
    android:orientation="vertical">
       
       <TextView
           android:id="@+id/Labe4"
           android:layout_width="350dp"
           android:layout_height="70dp"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="165dp"
           android:background="@drawable/wenben"
           android:gravity="center"
           android:textSize="25sp" />

       <TextView
           android:id="@+id/Labe3"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/Labe4"
           android:layout_marginTop="16dp"
           android:textColor="#FFFFFF"
           android:textSize="25sp" />

       <Button
           android:id="@+id/bttn3"
           android:layout_width="80dp"
           android:layout_height="100dp"
           android:layout_alignBaseline="@+id/bttn2"
           android:layout_alignBottom="@+id/bttn2"
           android:layout_alignLeft="@+id/Labe3"
           android:background="@drawable/dishu" />

       <TextView
           android:id="@+id/Label"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:layout_alignBaseline="@+id/Labe2"
           android:layout_alignBottom="@+id/Labe2"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="130dp"
           android:textColor="#FFFFFF"
           android:textSize="25sp" />

       <Button
           android:id="@+id/bttn1"
           android:layout_width="80dp"
           android:layout_height="100dp"
           android:layout_alignLeft="@+id/Label"
           android:layout_centerVertical="true"
           android:background="@drawable/dishu" />

       <TextView
           android:id="@+id/Labe2"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:layout_alignBaseline="@+id/Labe3"
           android:layout_alignBottom="@+id/Labe3"
           android:layout_marginLeft="14dp"
           android:layout_toRightOf="@+id/Label"
           android:textColor="#FFFFFF"
           android:textSize="25sp" />

       <Button
           android:id="@+id/bttn2"
           android:layout_width="80dp"
           android:layout_height="100dp"
           android:layout_alignBaseline="@+id/bttn1"
           android:layout_alignBottom="@+id/bttn1"
           android:layout_alignLeft="@+id/Labe2"
           android:background="@drawable/dishu" />

</RelativeLayout>